#/bin/bash
#
# Cron job
# 0 0 * * * cd /root && ./04

OLD_SUM=`cat /root/cron_md5_sum`
NEW_SUM=`md5sum /etc/crontab | cut -d " " -f1`

if [ "$OLD_SUM" != "$NEW_SUM" ]
then
        echo $NEW_SUM > /root/cron_md5_sum
        echo "The /etc/crontab file has been modified since last check" | mail -s "Modification notice" root
fi
